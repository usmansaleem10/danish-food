		#	help: "Select type of website header"

		logo:
			label: Website Logo
			type: image
			default: '/design/img/logo_new.png'
			help: "Logo image for website header"

		headItems:
			label: Header Items
			type: clone
			max: 3
			help: 'Add new Item by click on "+ Add New Item" link, or remove existing Item by clicking on red cross. Click on "Remove All Items" link to remove all existing Items.'
			items:
				label:
					label: Label
					type: text
					help: "Item icon title"
				mainIcon:
					label: Main Icon
					type: font-awesome-select
					less: false
					help: "Class of icon from FontAwesome - disable Icon Image"
				#mainText:
				#	label: Main Text
				#	type: text
				#	less: false
				url:
					label: Link
					type: url
					help: "Item icon link, use valid URL format with http://"
			default:
				0:
					label: "099 - 123 425 68"
					mainIcon: "fa-phone"
				#	mainText: ""
					url: ""
				1:
					label: "Ristorante street, Dublin"
					mainIcon: "fa-envelope"
				#	mainText: ""
					url: ""
		headbg:
			label: Header Background
			type: background
			default:
				color: '#464646'
				opacity: 60%
				image: '/design/img/patterns/sand.png'
				repeat: repeat
				position: top center
				scroll: scroll
			help: "Look of section background. Color, opacity and background image."

		stickyMenu:
			label: Sticky Menu
			type: on-off
			default: on
			help: "Enable or disable sticky menu on website"



		- section(title: 'Main Menu Colors and Backgrounds')

		menubg:
			label: Background
			type: color
			default: '#464646'
			opacity: 60%
			required: true
			help: "Background color and opacity of main menu"

		menuColor:
			label: Menu Items
			type: color
			default: '#ffffff'
			help: "Color of menu items text"

		menuHvrColor:
			label: Menu Hover Items
			type: color
			default: '#ffffff'
			help: "Hover Color of menu items text"

		menuColorAct:
			label: Active Menu Item
			type: color
			default: '#ffffff'
			help: "Color of active menu item text"

		- section(title: Custom JavaScript Code)

		customJsCode:
			label: JavaScript Code
			type: multiline-code
			default: ''
			help: "Place for your custom Javascript codes"


footer:
	title: Footer
	options:
		- section(title: 'Footer Widgets Area')

		footerbg:
			label: Background
			type: background
			default:
				color: '#464646'
				opacity: 100%
				image: '/design/img/patterns/sand.png'
				repeat: repeat
				position: top center
				scroll: scroll
			help: "Look of section background. Color, opacity and background image."
			required: true

		titFwColor:
			label: Titles
			type: color
			default: '#ffffff'
			help: "Color of widget titles"

		txtFwColor:
			label: Text
			type: color
			default: '#ffffff'
			help: "Color of plain text"

		lnkFwColor:
			label: Links
			type: color
			default: '#d30000'
			help: "Color of links"

		decFwColor:
			label: Decoration
			type: color
			default: '#d30000'
			help: "Decorative color of some elements and links with mouse cursor over"


		- section(title: 'Footer Bar')

		FtText:
			label: Text Area Width
			type: number
			unit: %
			default: 40
			help: "Percentage width of area"

		FtMenu:
			label: Menu Area Width
			type: number
			unit: %
			default: 40
			help: "Percentage width of area"

		bgColor:
			label: Background
			type: color
			default: '#ffffff'
			opacity: 100%
			help: "Background color and opacity of footer bar"

		txtColor:
			label: Text
			type: color
			default: '#464646'
			help: "Color of plain text"

		lnkColor:
			label: Links
			type: color
			default: '#d30000'
			help: "Color of links"

		hvrColor:
			label: Links Hover
			type: color
			default: '#d30000'
			help: "Color of links with mouse cursor over"

		text:
			label: Text Area
			type: editor
			default: '<p>&copy; 2013 Copyright by <a href="http://www.ait-themes.club">AIT-Themes</a>. All rights reserved.</p>'
			help: "Text displayed in footer bar text area"

		- section(title: Custom JavaScript Code)

		customJsCode:
			label: JavaScript Code
			type: multiline-code
			default: ''
			help: "Place for your custom Javascript codes"

typography:
