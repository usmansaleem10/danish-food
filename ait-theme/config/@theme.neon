general:
	title: General
	options:

		layoutType:
			type: variable
			default: layout-wide

		websiteWidth:
			label: Website Width
			type: range
			unit: px
			min: 900
			max: 1800
			step: 20
			default: 1360
			help: "Width of the website layout"

		leftSidebarWidth:
			label: Left Sidebar Width
			type: range
			unit: %
			min: 10.0
			max: 30.0
			step: 0.1
			default: 30.0

		rightSidebarWidth:
			label: Right Sidebar Width
			type: range
			unit: %
			min: 10.0
			max: 30.0
			step: 0.1
			default: 30.0

		sidebarGap:
			type: variable
			default: 4.4

		progressivePageLoading:
			label: Progressive Page Loading
			type: on-off
			default: off
			help: "Enable or disable progressive loading of page"

		#scrollMenu:
		#	label: Scroll Main Menu
		#	type: on-off
		#	default: off
		#	help: "Enable or disable main menu to be scrollable"

		#scrollSidebar:
		#	label: Scroll Left Sidebar
		#	type: on-off
		#	default: off
		#	help: "Enable or disable left sidebar to be scrollable"


		- section(title: 'Main Theme Colors and Backgrounds')

		favicon:
			label: Favicon
			type: image
			default: "/design/img/favicon.png"
			help: "Select image used as Favicon"

		mainbg:
			label: Website Background
			type: background
			default:
				color: '#ffffff'
				opacity: 100%
				image: ''
				repeat: repeat
				position: top center
				scroll: scroll
			help: "Look of section background. Color, opacity and background image."
			required: true

		mainbgImg:
			label: Background Image for Mobile and Tablet.
			type: on-off
			default: on
			help: "Enable or disable background image for Mobile and tablet."

		themeColor:
			label: Theme Color
			type: color
			default: '#464646'
			help: "Main theme color"
			required: true

		pageBgColor:
			label: Page Background
			type: color
			default: '#ffffff'
			opacity: 80%
			help: "Color and opacity of page background"
			required: true

		titColor:
			label: Titles
			type: color
			default: '#333333'
			help: "Color of titles text"
			required: true

		txtColor:
			label: Text
			type: color
			default: '#4e4e4e'
			help: "Color of main text"
			required: true

		lnkColor:
			label: Links
			type: color
			default: '#d30000'
			help: "Color of links"
			required: true

		hvrColor:
			label: Links Hover
			type: color
			default: '#800303'
			help: "Color of links with mouse cursor over"
			required: true

		decColor:
			label: Decoration
			type: color
			default: '#d30000'
			help: "Decorative color of elements on website"
			required: true

		linesColor:
			label: Lines
			type: color
			default: '#dddddd'
			help: "Color of lines"
			required: true

		lightObj:
			label: Lighter Objects
			type: color
			default: '#ffffff'
			opacity: 90%
			help: "Color and opacity to make objects lighter"
			required: true

		darkObj:
			label: Darker Objects
			type: color
			default: '#656565'
			opacity: 20%
			help: "Color and opacity to make objects darker"
			required: true

header:
	title: Header
	options:

		#headerType:
		#	label: Header Type
		#	type: image-radio
		#	checked: header-one
		#	images:
		#		header-one: header-one.png
		#		header-two: header-two.png
		#		header-three: header-three.png
		#		header-four: header-four.png
