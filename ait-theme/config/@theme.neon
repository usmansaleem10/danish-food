breadcrumbs:
	title: Breadcrumbs
	options:
		separator:
			label: Separator
			type: code
			default: '&raquo;'
			help: "Separator used between links in breadcrumbs"

		before:
			label: Breadcrumbs Text
			type: text
			default: 'You are here:'
			help: "Text displayed before breadcrumbs"

		showHome:
			label: Text for "Home"
			type: text
			default: "Home"
			help: "Text for home link in breadcrumbs"

		network:
			label: Website Title
			type: on-off
			default: off
			help: "Display current website title in breadcrumbs. Have not any effect on standard Wordpress installation, only on Wordpress Multisite installation."

# Allows adding sidebars and widget areas from theme admin
@widgetAreasAndSidebars:
	title: 'Sidebars & Widget Areas'
	options:

		- section(title: Sidebars, help: 'Add new Sidebar by click on "+ Add New Item" link, or remove existing Sidebar by clicking on red cross.')


		@sidebar:
			label:
			type: clone
			min: 1
			max: 10
			removeAll: false
			sort: false
			items:
				name:
					label: Name
					type: text
					help: "Name of widget area displayed in Widgets options"
			default:
				0:
					name: 'General (Subpage)'
				1:
					name: Homepage
				2:
					name: Blog
				3:
					name: Blog Post
				4:
					name: Portfolio Item

		- section(title: Header Widget Area, help: 'Add new Header Widget Area by click on "+ Add New Item" link, or remove existing Header Widget Area by clicking on red cross.')

		header:
			type: clone
			min: 1
			max: 1
			removeAll: false
			sort: false
			items:
				name:
					label: Name
					type: text
					default: ''
					help: "Name of widget area displayed in Widgets options"
#				width:
#					label: Width
#					type: number
#					unit: %
#					default: 25
			default:
				0:
					name: Header Widget Area
								

		- section(title: Footer Widget Areas, help: 'Add new Footer Widget Area by click on "+ Add New Item" link, or remove existing Footer Widget Area by clicking on red cross.')

		footer:
			type: clone
			min: 1
			max: 6
			removeAll: false
			sort: false
			items:
				name:
					label: Name
					type: text
					default: ''
					help: "Name of widget area displayed in Widgets options"
				width:
					label: Width
					type: number
					unit: %
					default: 25
					help: "Percentage width of area"
			default:
				0:
					name: Footer Widget Area 1
					width: 40
				1:
					name: Footer Widget Area 2
					width: 20
				2:
					name: Footer Widget Area 3
					width: 20
				3:
					name: Footer Widget Area 4
					width: 20



google:
	title: Google
	options:

		analyticsTrackingId:
			label: Google Analytics Tracking ID
			type: code
			help: "Google Analytics Tracking ID in form UA-XXXXX-YY"
		mapsApiKey:
			label: Google Maps API key
			type: code

social:

	title: Social Icons 
	options:

		enableSocialIcons:
			label: Display
			type: on-off
			default: on
			help: "Display social icons on website"

		socbg:
			label: Background
			type: color
			default: '#000000'
			opacity: 0%
			help: "Background color and opacity of icons"

		socIconsNewWindow:
			label: Open In New Window
			type: on-off
			default: on
			help: 'Open links in new window or tab'

		socIcons:
			label: Social Icons
			type: clone
			max: 10
			help: 'Add new Social Icon by click on "+ Add New Item" link, or remove existing Social Icon by clicking on red cross. Click on "Remove All Items" link to remove all existing Social Icons.'
			items:
				title:
					label: Title
					type: text
					help: "Social icon title"
				icon:
					label: Icon Light
					type: image
					less: false
					help: "Social icon image"
				iconDark:
					label: Icon Dark
					type: image
					less: false
					help: "Social icon image"
				url:
					label: Link
					type: url
					help: "Social icon link, use valid URL format with http://"
			default:
				0:
					title: Facebook
					icon: '/design/img/ico/ico_facebook.png'
					iconDark: '/design/img/ico/ico_facebook_dark.png'
					url: 'http://www.facebook.com/AitThemes'
				1:
					title: Twitter
					icon: '/design/img/ico/ico_twitter.png'
					iconDark: '/design/img/ico/ico_twitter_dark.png'
					url: 'http://www.twitter.com/AitThemes'
				2:
					title: 'Google+'
					icon: '/design/img/ico/ico_gplus.png'
					iconDark: '/design/img/ico/ico_gplus_dark.png'
					url: 'https://plus.google.com/116003390334141481363'
				3:
					title: LinkedIn
					icon: '/design/img/ico/ico_linkedin.png'
					iconDark: '/design/img/ico/ico_linkedin_dark.png'
					url: 'http://www.linkedin.com/company/ait-themes-com'
iconmenu:

	title: Icon Menu 
	options:

		enableIcons:
			label: Display
			type: on-off
			default: on
			help: "Display Icon Menu on website"



		Icons:
			label: Icon Menu
			type: clone
			max: 4
			help: 'Add new item to Icon menu by click on "+ Add New Item" link, or remove existing item by clicking on red cross. Click on "Remove All Items" link to remove all existing items.'
			items:
				title:
					label: Title
					type: text
					help: "Icon title"
				titleColor:
					label: Title Color
					type: color
					less: false
					help: "Title color of item"	
				text:
					label: Text
					type: text
					help: "Icon text"	
				color:
					label: Decoration Color
					type: color
					less: false
					help: "Decoration color of item"
				icon:
					label: Icon
					type: image
					less: false
					help: "Icon image"
				url:
					label: Link
					type: url
					help: "Icon link, use valid URL format with http://"
			default: []

		- section(title: Custom JavaScript Code)

		customJsCode:
			label: JavaScript Code
			type: multiline-code
			default: ''